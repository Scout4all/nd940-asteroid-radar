<resources>

    <style name="Theme.AsteroidRadar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <item name="fontFamily">@font/baumans</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextAppearance.VeryBig" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/font_size_vey_big</item>
        <item name="android:textColor">@color/default_text_color</item>
    </style>

    <style name="TextAppearance.Big" parent="TextAppearance.VeryBig">
        <item name="android:textSize">@dimen/font_size_big</item>
        <item name="android:layout_marginTop">@dimen/spacing_normal</item>
    </style>

    <style name="TextAppearance.Normal" parent="TextAppearance.VeryBig">
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:layout_marginTop">@dimen/spacing_very_small</item>

    </style>

    <style name="TextAppearance.SubNormal" parent="TextAppearance.VeryBig">
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>
</resources>